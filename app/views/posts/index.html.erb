<div class = "posts">
  <div class = "into">
    <% @posts.each do |post| %>
      <p><%= post.score%>
        <span class="name"><%= post.subject %></span>
    <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
          </li>
        </ul>
      </div>
      </p>
    <% end %>
  </div>
  <div class = "add">
    <%= link_to"情報を追加",new_post_path, method: :get %> 
  </div>
</div>
 